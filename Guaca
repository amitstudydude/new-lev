#!/bin/bash
# Cleanup any existing containers, images, or volumes for Guacamole
echo "Cleaning up existing Docker containers, images, and volumes..."
docker rm -f guacamoledb guacd guacamole 2>/dev/null || true  # Force remove existing containers
docker rmi -f guacamole/guacamole:1.4.0 guacamole/guacd:1.4.0 mariadb:10.9.5 2>/dev/null || true  # Force remove images
docker volume rm $(docker volume ls -q --filter dangling=true) 2>/dev/null || true  # Remove dangling volumes
rm -f initdb.sql  # Remove previous init SQL files
rm -rf ./db-data  # Remove database data directory if exists
# Pull Docker images
echo "Pulling Docker images..."
docker pull guacamole/guacamole:1.4.0
docker pull guacamole/guacd:1.4.0
docker pull mariadb:10.9.5
# Generate initial database SQL file
echo "Generating initial database SQL file..."
docker run --rm guacamole/guacamole:1.4.0 /opt/guacamole/bin/initdb.sh --mysql > initdb.sql
# Start the MariaDB container and create the my.cnf file inside the container
echo "Starting MariaDB container..."
docker run --name guacamoledb \
  -e MYSQL_ROOT_PASSWORD=MariaDBRootPass \
  -e MYSQL_DATABASE=guacamole_db \
  -e MYSQL_USER=guacamole_user \
  -e MYSQL_PASSWORD=MariaDBUserPass \
  -v $(pwd)/db-data:/var/lib/mysql \
  -d mariadb:10.9.5
# Wait for the database to initialize
echo "Waiting for MariaDB to initialize..."
sleep 10  # Adjust time as necessary; wait for DB to be ready
# Create the my.cnf file in the MariaDB container
echo "Creating MySQL configuration file inside the MariaDB container..."
docker exec -i guacamoledb bash -c "echo -e '[client]\nuser=root\npassword=MariaDBRootPass' > /etc/my.cnf"
docker exec -i guacamoledb bash -c "chmod 600 /etc/my.cnf"
docker cp initdb.sql guacamoledb:/initdb.sql
docker exec -i guacamoledb mysql -p guacamole_db < initdb.sql
echo "Starting Guacamole container..."
docker run --name guacd -d guacamole/guacd:1.4.0
docker run --name guacamole \
  --link guacd:guacd \
  -p 8080:8080 \
  -e GUACD_HOSTNAME=guacd \
  -e MYSQL_HOSTNAME=guacamoledb \
  -e MYSQL_DATABASE=guacamole_db \
  -e MYSQL_USER=guacamole_user \
  -e MYSQL_PASSWORD=MariaDBUserPass \
  -d guacamole/guacamole:1.4.0
echo "Guacamole installation completed!"
echo "Access Guacamole at http://<Your-IP>:8080/guacamole"
echo "Default Username: guacadmin"
echo "Default Password: guacadmin"
