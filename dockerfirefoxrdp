mkdir -p ~/.config/rclone/ /onedrive /config  && wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/scripts/rclone.conf && mv rclone.conf ~/.config/rclone && curl https://rclone.org/install.sh | sudo bash  && rclone listremotes && rclone mount onedrive:PC /onedrive --allow-non-empty --vfs-cache-mode full --user-agent 'Mozilla' --vfs-cache-mode full --cache-dir 'cache' --allow-other  --transfers 100 --daemon --vfs-cache-poll-interval 1s --vfs-cache-max-age 1s --vfs-write-back 1s -P 
cat <<EOF >Dockerfile 
FROM ubuntu 

RUN printf "root\nroot" | passwd root && apt update && DEBIAN_FRONTEND=noninteractive  apt install -y xrdp xfce4-terminal wget 7zip openbox && echo 'exec openbox & exec xfce4-terminal --execute bash -c "/firefox ; exec bash"'> /etc/xrdp/startwm.sh && echo 'mkdir -p ~/.config/rclone/ /onedrive /config  && wget https://raw.githubusercontent.com/amitstudydude/RDP_Linux/main/scripts/rclone.conf && mv rclone.conf ~/.config/rclone && curl https://rclone.org/install.sh | sudo bash  ; fusermount -z -u /onedrive && rclone mount onedrive:PC /onedrive --allow-non-empty --vfs-cache-mode full --user-agent "Mozilla" --cache-dir "cache" --allow-other --transfers 100 --daemon --vfs-cache-poll-interval 1s --vfs-cache-max-age 1s --vfs-write-back 1s -P && rm -rf /usr/bin/firefox* /opt/firefox* /usr/local/share/applications/firefox.desktop* && wget -O firefox.tar.xz "https://download.mozilla.org/?product=firefox-nightly-latest&os=linux64&lang=en-US" --trust-server-names && 7z x *xz && 7z x *tar  && mv firefox /opt/ && rm -rf firefox* && ln -s /opt/firefox/firefox /usr/bin/firefox && wget https://raw.githubusercontent.com/mozilla/sumo-kb/main/install-firefox-linux/firefox.desktop -P /usr/local/share/applications && rm -rf ~/.mozilla && ln -s /onedrive/docker/.mozilla ~/ && firefox ' >/firefox && chmod +x /firefox 

EXPOSE 3389


EOF
docker run --network host  --name guacamole -u root -v /config:/config abesnier/guacamole &
docker build -t f .
docker rm -f $(docker ps --filter "publish=4500" -q)
docker kill $(docker ps --filter "publish=4500" -q)
export PID=$(docker inspect --format '{{.State.Pid}}' $(docker ps --filter "publish=4500" -q)) && echo $PID  && kill -9 $PID
docker run --rm -dit -p 4500:3389  f
docker exec $(docker ps --filter "publish=4500" -q)  bash -c "service xrdp start"
rm Dockerfile
cp /onedrive/guacamole_db_backup.tar1 /config/guacamole_db_backup.tar && docker exec guacamole bash -c "pg_restore -d guacamole_db guacamole_db_backup.tar -c -U guacamole"
