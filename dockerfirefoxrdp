cat <<EOF >Dockerfile 
FROM ubuntu 

RUN printf "root\nroot" | passwd root && apt update && DEBIAN_FRONTEND=noninteractive apt install -y  wget curl sudo xrdp xterm awesome 7zip && useradd -m testuser && echo "testuser:1234" | chpasswd && usermod -aG sudo testuser  && wget "https://download.mozilla.org/?product=firefox-nightly-latest&os=linux64&lang=en-US" --trust-server-names && 7z x *xz && 7z x *tar && mv firefox /opt && ln -s /opt/firefox/firefox /usr/local/bin/firefox && wget https://raw.githubusercontent.com/mozilla/sumo-kb/main/install-firefox-linux/firefox.desktop -P /usr/local/share/applications
EXPOSE 3389


CMD service xrdp start && /bin/bash
EOF
docker build -t f .
docker run -dit -p 4500:3389 --name bore f
